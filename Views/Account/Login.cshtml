@model KTI.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="Login-page">
    <div class="page-header">
        <h1>Login</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please enter yout credentials</h3>
                </div>
                <div ckass="panel-body">

                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <fieldset>
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label"></label>
                                <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="mb-3 form-check">
                                <label asp-for="RememberLogin" class="form-check-label">
                                    <input asp-for="RememberLogin" class="form-check-input">
                                    <strong>Remember Me</strong>
                                </label>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Login</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <p>Or login with an acoount you already have:</p>
            <a class="btn btn-primary" asp-action="LoginWithGoogle" 
                asp-route-returnUrl="@Model.ReturnUrl">Login with Google</a>
        </div>
    </div>
</div>